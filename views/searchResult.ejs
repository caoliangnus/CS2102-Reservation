                    <th scope="col">Address</th>
                    <th scope="col"><strong>Action</strong></th>
                  </tr>
                </thead>
                <tbody>
                  <% for(var i=0; i<data.length; i++) { %>
                  <tr>
                    <%= console.log(data[i].allmenu);%>
                    <td><%= data[i].restaurantname%></td>
                    <td><%= data[i].restauranttype%></td>
                    <td><a href="#" data-toggle="tooltip" data-placement="top" title="<%=data[i].allmenu%>">touch to
                        see</a></td>
                    <td><%= data[i].fulladdress%></td>
                    <td>
                      <form id = "booking" action="searchResult" method="post">
                        <input type="hidden" name="index" value="<%=i%>">
                        <button type="submit" name="submit" value="Book">Book</button>
                      </form>
                    </tr>
                  <% } %>
                </tbody>
              </table>

            </div>

          </div>
        </div>
      </div>
    </section>

